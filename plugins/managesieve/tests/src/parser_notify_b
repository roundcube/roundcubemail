require ["envelope","notify","variables"];
# rule:[from]
if envelope :matches "from" "*"
{
	set "env_from" " [really: ${1}]";
}
# rule:[subject]
if header :matches "Subject" "*"
{
	set "subject" "${1}";
}
# rule:[from notify]
if address :matches "from" "*"
{
	set "from_addr" "${1}";
	notify :method "sms" :options "1234567890" :message "${from_addr}${env_from}: ${subject}";
}
